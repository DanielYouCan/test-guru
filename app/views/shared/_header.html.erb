<div class="header">
  <div class="nav user">
    <%= link_to "Test-Guru", root_path %> |
  </div>
  <% if logged_in? %>
    <div class="nav user">
      Welcome, <b><%= current_user.email %> </b> Guru |
    </div>
    <div class="nav user">
      <%= button_to 'Logout', logout_path, method: :delete %>
    </div>
  <% else %>
    <div class="nav user">
      <%= link_to 'Register', signup_path %>  |
    </div>
    <div class="nav user">
      <%= link_to 'Login', login_path %>
    </div>
  <% end %>
</div>
